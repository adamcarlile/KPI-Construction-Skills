<% @page_title = 'Login' %>

<% form_for @user_session  do |f| %>
<%= hidden_field_tag :return_to, params[:return_to] %>
<fieldset id="login">
		<%= f.field :email, :label => 'E-Mail Address' %>
		<%= f.field :password, :label => 'Password' %>
  	<p>
	  	<input type="submit" id="submitbutton" class="submit" value="Login" />
		</p>
</fieldset>
<%= link_to 'Lost your password?', new_password_reset_path %>
<% end %>